<resources>

    <style name="Platform.Theme.MoviesApp" parent="Theme.Material3.DayNight">
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="Theme.MoviesApp" parent="Platform.Theme.MoviesApp">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.MoviesApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MoviesApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.MoviesApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>